<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hualubeiyou.faceplusapp.ui.activity.MainActivity"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/face_detect_system"
        android:textColor="@color/base_theme_color"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_16"/>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_base_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_base_btn"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/ic_play_arrow"
                android:paddingStart="@dimen/dp_82"
                />
            
            <TextView
                android:layout_below="@id/btn_base_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/add_new_face"
                android:textColor="@color/base_theme_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_16"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_base_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_base_btn"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/ic_play_arrow"
                android:paddingStart="@dimen/dp_82"
                />

            <TextView
                android:layout_below="@id/btn_base_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/detect_in_real_time"
                android:textColor="@color/base_theme_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_16"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
