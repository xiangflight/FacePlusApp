<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hualubeiyou.faceplusapp.ui.activity.MainActivity"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/face_detect_system"
        android:textColor="@color/base_theme_color"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        />

    <Button
        android:id="@+id/btn_base_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="40%"
        android:layout_centerVertical="true"
        app:layout_marginStartPercent="12.5%"
        android:background="@drawable/selector_base_btn"
        android:text="@string/add_new_face"
        android:textColor="@color/base_theme_color"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_base_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="42%"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn_base_one"
        app:layout_marginStartPercent="25%"
        android:background="@drawable/selector_base_btn"
        android:text="@string/detect_in_real_time"
        android:textColor="@color/base_theme_color"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        />

</android.support.percent.PercentRelativeLayout>
